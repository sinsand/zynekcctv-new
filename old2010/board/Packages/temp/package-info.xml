<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>yoshi2889:backtotheindex</id>
	<name>Back to the index</name>
	<version>0.2</version>
	<type>modification</type>

	<install for="2.0 - 2.0.99">
		<readme parsebbc="true">readme.txt</readme>
		<modification type="file">install.xml</modification>
		<modification type="file">langs.xml</modification>
		<modification type="file">langs_utf8.xml</modification>
		<code>MakeSettings.php</code>
	</install>

	<uninstall for="2.0 - 2.0.99">
		<modification type="file" reverse="true">install.xml</modification>
		<modification type="file" reverse="true">langs.xml</modification>
		<modification type="file" reverse="true">langs_utf8.xml</modification>
		<code>RemoveSettings.php</code>
	</uninstall>
</package-info>
